<PaiementScreen>:
    name: "paiements"   

    MDBoxLayout:
        orientation:"vertical"
        
        MDTopAppBar:
            title: " Gestion des Paiements"
            md_bg_color: 0, 0, 0, 1  # noir opaque
            specific_text_color: 1, 1, 1, 1  # texte blanc
            elevation: 4
            pos_hint: {"top": 1}
            left_action_items: [["menu", root.showDrawer]]                  

        BoxLayout:
            orientation: "vertical"
            padding: dp(5)
            spacing: dp(5)

            Widget:
                size_hint_y: 0.05

            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: "50dp"
                spacing: dp(10)
                padding: dp(10)

                MDTextField:
                    id: search_input
                    hint_text: "Rechercher un paiement par mode "
                    mode: "rectangle"
                    size_hint_x: 0.6
                    height: "50dp"
                    on_text: root.rechercher_paiement(self.text)

                MDIconButton:
                    icon: "refresh"  
                    user_font_size: "24sp"
                    md_bg_color:  0, 0, 0, 1 
                    theme_text_color: "Custom"
                    text_color: 1,1,1,1
                    size_hint: 0.1, None
                    height: "50dp"
                    on_release: root.charger_paiement()

            Widget:
                size_hint_y: 0.025

            MDLabel:
                text: "Liste des Paiements"
                halign: "center"
                size_hint_y: 0.05
                font_style: "H6"

            Widget:
                size_hint_y: 0.025

            MDSeparator:
                height: dp(2)

            ScrollView:
                size_hint_y: 0.75
                MDList:
                    id: liste_paiement