<EntreeScreen>:
    name:"scanner_entree"
    FitImage:
        source: "images/fond.jpg"
        allow_stretch: True
        keep_ratio: False

    MDBoxLayout:
        orientation:"vertical"
        
        MDTopAppBar:
            title: " Scannage a l'entrée "
            md_bg_color: 0, 0, 0, 1  # noir opaque
            specific_text_color: 1, 1, 1, 1  # texte blanc
            elevation: 4
            pos_hint: {"top": 1}
            left_action_items: [["menu", root.showDrawer]] 
        
        MDBoxLayout:
            orientation:"horizontal"
            padding:dp(10)
            spacing:dp(10)

        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            orientation: "vertical"


            MDCard:
                orientation: "vertical"
                size_hint: None, None  
                height:400
                width:350
                pos_hint: {"center_x": 0.5,"center_y":.5}
                elevation: 5
                padding: "25dp"
                spacing: "20dp"
                radius: [20, ]
            
                MDTextField:
                    id: typeEngin_input
                    hint_text:"Type d'engin "
                    mode:"rectangle"

                BoxLayout:
                    id: conteneur_camera

                MDRectangleFlatIconButton:
                    text: "Capturer"
                    icon: "camera" 
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    line_color: 0, 0, 0, 0    
                    md_bg_color: 0, 0, 0, 1  
                    pos_hint: {"center_x": 0.5, "center_y": 0.5} 
                    on_release: root.prendre_photo()
        
        MDBoxLayout:
            orientation:"horizontal"
            padding:dp(10)
            spacing:dp(10)
            pos_hint: {"center_x": 0.5, "center_y": 0.5} 

            
            MDRectangleFlatIconButton:
                text: "Ouvrir Caméra" 
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                line_color: 0, 0, 0, 0    
                md_bg_color: 0, 0, 0, 1   
                on_release: root.demarrer_camera()
            MDRectangleFlatIconButton:
                text: "Fermer Caméra" 
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                line_color: 0, 0, 0, 0    
                md_bg_color: 0, 0, 0, 1   
                on_release: root.arreter_camera()
            Widget : 
    
        

                
